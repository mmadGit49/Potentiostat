<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stephany.potentiostat">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MonitoringScreen"></activity>
        <activity android:name=".SignUp" />
        <activity android:name=".Login" />
        <activity
            android:name=".Bluetooth"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ImpedanceSpectroscopy"
            android:parentActivityName=".NewProcedure" />
        <activity
            android:name=".DirectPulseVoltammetry"
            android:parentActivityName=".NewProcedure" />
        <activity
            android:name=".Amperometry"
            android:parentActivityName=".NewProcedure" />
        <activity
            android:name=".CyclicVoltammetry"
            android:parentActivityName=".NewProcedure" />
        <activity
            android:name=".NewProcedure"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>